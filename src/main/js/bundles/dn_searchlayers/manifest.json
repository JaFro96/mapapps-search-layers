{
    "name": "dn_searchlayers",
    "version": "1.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-search-layer-store",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "dependencies": {
        "store-api": "^4.12.1",
        "esri": "~4.20.0"
    },
    "components": [
        {
            "name": "searchLayerActivateAction",
            "provides": "map-actions.Action",
            "properties": {
                "handleStores": [
                    "searchlayersstore"
                ],
                "activate": true
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "SearchLayersStoreF",
            "provides": [
                "ct.api.Store"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "searchlayersstore",
                "title": "Layer Suche",
                "description": "Searching for layers",
                "useIn": [
                    "omnisearch",
                    "search-ui"
                ],
                "omniSearchDefaultLabel": "${title}",
                "omniSearchSearchAttr": "title",
                "omniSearchLabelAttr": "title",
                "omniSearchTypingDelay": 500,
                "metadata": {
                    "fields": [
                        {
                            "title": "UID",
                            "name": "uid",
                            "type": "string"
                        },
                        {
                            "title": "Layer Name",
                            "name": "title",
                            "type": "string"
                        }
                    ]
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        }
    ]
}
